<h1>All Tasks</h1>
<% @tasks.each do |task| %>
  <p><%= task.name %></p>
  <%= link_to "View Task", category_task_path(task.category_id, task) %>
  <%= link_to "Edit Task", edit_category_task_path(task.category_id, task) %>
  <%= link_to "Delete Task", category_task_path(task.category_id, task),
    method: :delete, 
    data: {confirm: "Are you sure you want to delete this?"}
  %>
<% end %>
