<div class="mb-3">
  <%= f.label :name, class: "form-label" %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :details, class: "form-label" %>
  <%= f.text_area :details, class: "form-control form__textarea" %>
</div>
<div class="mb-3">
  <%= f.label :due_date, class: "form-label" %>
  <%= f.date_field :due_date, class: "form-control" %>
</div>
<%= f.submit "Submit", class: "btn btn-primary form-control" %>