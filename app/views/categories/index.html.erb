<div class="container p-2">
  <h1 class="text-center m-3">Categories</h1>

  <div class="row d-flex justify-content-around">
    <% @categories.each do |category| %>
      <div class="col-sm-6 col-md-4 p-3">
        <div class="card card-equal-height">
          <div class="card-body d-flex flex-column card__modify">
            <h2 class="card-title"><%= category.name %></h2>
            <% if category.description.empty? %>
              <p class="text-muted">
                No description added for this category.
                <%= link_to category_path(category) do %>
                  View tasks
                <% end %>
              </p>
            <% else %>
              <p class="card-text"><%= category.description %></p>
            <% end %>
            <%= render 'shared/modify_category', category: category %>
          </div>
        </div>
      </div>
    <% end %>

    <% if @categories.length <= 5 %>
      <% (6 - @categories.length).times do %>
        <div class="col-sm-6 col-md-4 p-3">
          <div class="card card-equal-height">
            <div class="card-body d-flex justify-content-center align-items-center">
              <%= link_to new_category_path do %>
                <h1><i class="bi bi-plus-circle"></i></h1>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-sm-6 col-md-4 p-3">
        <div class="card card-equal-height">
          <div class="card-body d-flex justify-content-center align-items-center">
            <%= link_to new_category_path do %>
              <h1><i class="bi bi-plus-circle"></i></h1>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>