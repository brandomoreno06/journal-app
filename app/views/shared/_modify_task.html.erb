<div class="container text-end">
  <%= link_to category_task_path(task.category_id, task) do %>
    <i class="bi bi-eye-fill p-2" data-toggle="tooltip" data-placement="top" title="View Task"></i>
  <% end %>
  <%= link_to edit_category_task_path(task.category_id, task) do %>
     <i class="bi bi-pencil-square p-2" data-toggle="tooltip" data-placement="top" title="Edit task"></i>
  <% end %>
  <%= link_to category_task_path(task.category_id, task),
    method: :delete,
    data: {confirm: "Are you sure you want to delete this?"} do
  %>
    <i class="bi bi-trash-fill p-2" data-toggle="tooltip" data-placement="top" title="Delete task"></i>
  <% end %>
</div>