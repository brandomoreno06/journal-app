<!-- Button trigger modal -->

<i class="bi bi-trash-fill p-2 icons__color" data-bs-toggle="modal" data-bs-target="#category<%=category.id%>Center" data-toggle="tooltip" data-placement="top" title="Delete category"></i>


<!-- Modal -->
<div class="modal fade" id="category<%=category.id%>Center" tabindex="-1" role="dialog" aria-labelledby="category<%=category.id%>CenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="category<%=category.id%>LongTitle">Deleting category: <%= category.name %></h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this category? All related tasks will also be deleted.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= link_to category_path(category),
          method: :delete do
        %>
          <button type="button" class="btn btn-primary">Delete</button>
        <% end %>
      </div>
    </div>
  </div>
</div>